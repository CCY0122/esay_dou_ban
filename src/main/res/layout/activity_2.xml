<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:diy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/a2_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC">

    <ProgressBar
        android:id="@+id/a2_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/a2_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="#FF6347"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/a2_img"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="7dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/aaz"
                    android:transitionName="share" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/a2_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ccy"
                        android:textColor="#ffffff"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="100dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:alpha="0.8"
                                android:gravity="center"
                                android:text="豆瓣评分:"
                                android:textColor="#ffffff"
                                android:textSize="8sp" />

                            <TextView
                                android:id="@+id/a2_rating"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="0.0"
                                android:textColor="#00FA9A"
                                android:textSize="23sp" />

                        </LinearLayout>

                        <com.example.materialdesigntest.diy_view.RoundIndicatorView
                            android:id="@+id/a2_round_indicator"
                            android:layout_width="140dp"
                            android:layout_height="130dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/a2_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#ffffff"
                        android:padding="4dp"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/a2_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="210dp">

            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/a2_to_web_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t\t去网页版查看详细资料"
                android:textColor="#4169E1"/>

            <TextView
                android:id="@+id/a2_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>




